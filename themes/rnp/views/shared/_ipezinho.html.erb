<% unless Rails.application.config.rnp_chat_id.blank? %>
  <% chat_id = Rails.application.config.rnp_chat_id %>
  <script>
    (function(s, z, c, h, a, t) {
      s.webchat = s.webchat || function() {
        (s.webchat.q = s.webchat.q || []).push(arguments);
      };
      t = z.createElement(c),
        a = z.getElementsByTagName(c)[0]; t.async = 1;
      t.src = 'https://rnp.sz.chat/webchat/v2/webchat.js';
      a.parentNode.insertBefore(t, a);
      s.webchat('cid', '<%= chat_id %>');
      s.webchat('host', h);
    })(window, document, 'script', 'https://rnp.sz.chat');

    window.addEventListener("message", function(event) {
      if(event.origin !== 'https://rnp.sz.chat') return;
    }, false);
  </script>
<% end %>
